<mvc:View controllerName="meg.workorder.controller.WorkOrder"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:sapf="sap.f"
	xmlns:fb="sap.ui.comp.filterbar"
	xmlns:sfb="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable">
	<Page id="page" title="{i18n>title}">
		<content>
			<fb:FilterBar id="FilterBar" clear="onResetFilters" reset="onReset" search="handleFilterChange" showRestoreButton="false" showClearButton="false" showClearOnFB="true" filterBarExpanded="true">
				<fb:filterGroupItems>
					<fb:FilterGroupItem groupName="G1" name="Work Order #" label="Work Order #" visibleInFilterBar="true">
						<fb:control>
							<!-- <Input id="woInput" value="{localModel>/valueHelp/workOrderValueHelp}" showValueHelp="true" valueHelpRequest=".onWOValueHelp" /> -->
							<MultiInput id="woInput" showValueHelp="true" valueHelpRequest=".onWOValueHelp" valueHelpOnly="true" tokenUpdate="handleValueHelpClose">
							</MultiInput>
						</fb:control>
					</fb:FilterGroupItem>

					<fb:FilterGroupItem groupName="G1" name="Plant" label="Plant" visibleInFilterBar="true">
						<fb:control>
							<!-- <Input id="idPlant" value="{localModel>/valueHelp/plantValueHelp}" showValueHelp="true" valueHelpRequest=".onPlantValueHelp" /> -->
							<MultiInput id="plantInput" showValueHelp="true" valueHelpRequest=".onPlantValueHelp" valueHelpOnly="true" tokenUpdate="handleValueHelpClose" />
						</fb:control>
					</fb:FilterGroupItem>

					<fb:FilterGroupItem groupName="G1" name="Order Type" label="Order Type" visibleInFilterBar="true">
						<fb:control>
							<!-- <Input id="orderTypeInput" value="{localModel>/valueHelp/orderTypeValueHelp}" showValueHelp="true" valueHelpRequest=".onOrderTypeValueHelp" /> -->
							<MultiInput id="orderTypeInput" showValueHelp="true" valueHelpRequest=".onOrderTypeValueHelp" valueHelpOnly="true" />
						</fb:control>
					</fb:FilterGroupItem>

					<fb:FilterGroupItem groupName="G1" name="Planner Group" label="Planner Group" visibleInFilterBar="true">
						<fb:control>
							<Input id="idPlannerGroup" value="{localModel>/valueHelp/plannerGroupValueHelp}" showValueHelp="true" valueHelpRequest=".onPlannerGroupValueHelp" />
						</fb:control>
					</fb:FilterGroupItem>

					<fb:FilterGroupItem groupName="G1" name="Work Center" label="Work Center" visibleInFilterBar="true">
						<fb:control>
							<Input value="{localModel>/valueHelp/workCenterValueHelp}" showValueHelp="true" valueHelpRequest=".onWorkCenterValueHelp" />
						</fb:control>
					</fb:FilterGroupItem>
					<fb:FilterGroupItem groupName="G1" name="Func Loc" label="Func Loc" visibleInFilterBar="true">
						<fb:control>
							<Input value="{localModel>/valueHelp/funcLocValueHelp}" showValueHelp="true" valueHelpRequest=".onFuncLocValueHelp" />
						</fb:control>
					</fb:FilterGroupItem>
					<fb:FilterGroupItem groupName="G1" name="Equipment" label="Equipment" visibleInFilterBar="true">
						<fb:control>
							<Input value="{localModel>/valueHelp/equipmentValueHelp}" showValueHelp="true" valueHelpRequest=".onEquipmentValueHelp" />
						</fb:control>
					</fb:FilterGroupItem>
				</fb:filterGroupItems>
			</fb:FilterBar>


			<VBox>
				<Table id="workOrderTable" items="{path: 'WorkOrderModel>/ZUSPPMEG01_WORK_ORDER_HEADERSet', parameters: {'expand': ''}}" mode="Navigation">
					<columns>
						<Column width="6rem">
							<Label text="Work Order"/>
						</Column>
						<Column width="3rem">
							<Label text="Plant"/>
						</Column>
						<Column width="5rem">
							<Label text="Order Type"/>
						</Column>
						<Column width="6rem" hAlign="End">
							<Label text="Planner Group"/>
						</Column>
						<Column width="6rem" hAlign="End">
							<Label text="Work Center"/>
						</Column>
						<Column width="6rem" hAlign="End">
							<Label text="Func Loc"/>
						</Column>
						<Column width="6rem" hAlign="End">
							<Label text="Equipment"/>
						</Column>

					</columns>
					<items>
						<ColumnListItem press="onTableItemPress" vAlign="Middle" type="Navigation">
							<cells>
								<Text text="{WorkOrderModel>WorkOrder}" wrapping="false"/>
								<Text text="{WorkOrderModel>Plant}" wrapping="false"/>
								<Text text="{WorkOrderModel>OrderType}" wrapping="false"/>
								<Text text="{WorkOrderModel>PlannerGroup}" wrapping="false"/>
								<Text text="{WorkOrderModel>WorkCenter}" wrapping="false"/>
								<Text text="{WorkOrderModel>FunctLocation}" wrapping="false"/>
								<Text text="{WorkOrderModel>Equipment}" wrapping="false"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</VBox>
		</content>
	</Page>
</mvc:View>
